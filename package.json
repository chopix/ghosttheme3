{
  "name": "rinne",
  "description": "Rinne Ghost Theme",
  "demo": "https://rinne.brightthemes.com",
  "version": "1.6.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "author": {
    "name": "Bright Themes",
    "email": "hi@brightthemes.com",
    "url": "https://brightthemes.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Resources",
      "Review",
      "Blog"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brightthemes/rinne-ghost.git"
  },
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "test": "gscan . verbose",
    "zip": "gscan . --verbose && gulp build && gulp zip"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@tryghost/content-api": "^1.11.21",
    "beeper": "^2.1.0",
    "browser-sync": "^2.29.3",
    "cssnano": "^5.1.15",
    "cssnano-preset-advanced": "^5.3.10",
    "fitvids": "^2.1.1",
    "fslightbox": "^3.4.2",
    "fuse.js": "^6.6.2",
    "gscan": "^4.45.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "headroom.js": "^0.12.0",
    "lazysizes": "^5.3.2",
    "postcss": "^8.4.47",
    "postcss-cssential": "^1.1.0",
    "postcss-import": "^15.1.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.8.3",
    "pump": "^3.0.2",
    "tiny-slider": "^2.9.4",
    "tocbot": "^4.31.0"
  },
  "config": {
    "card_assets": true,
    "posts_per_page": 24,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "color_scheme": {
        "type": "select",
        "options": [
          "system",
          "light",
          "dark"
        ],
        "default": "system"
      },
      "font_family": {
        "type": "select",
        "options": [
          "System font",
          "Figtree",
          "Space Grotesk",
          "Outfit",
          "Inter",
          "Kreon",
          "Quicksand",
          "Azeret Mono"
        ],
        "default": "Figtree"
      },
      "header_position": {
        "type": "select",
        "options": [
          "normal",
          "sticky",
          "floating"
        ],
        "default": "normal"
      },
      "use_portal_links": {
        "type": "boolean",
        "default": true
      },
      "cta_headline": {
        "type": "text"
      },
      "cta_description": {
        "type": "text"
      },
      "cta_button_text": {
        "type": "text",
        "default": "Subscribe"
      },
      "cta_button_link": {
        "type": "text",
        "default": "subscribe-form"
      },
      "tag_template_feed_style": {
        "type": "select",
        "options": [
          "list",
          "resources"
        ],
        "default": "list"
      },
      "hero_image_style": {
        "type": "select",
        "options": [
          "background-full",
          "background",
          "side",
          "bottom",
          "hidden"
        ],
        "default": "background-full",
        "group": "homepage"
      },
      "hero_image_filter": {
        "type": "text",
        "group": "homepage"
      },
      "resources_filter_slugs": {
        "type": "text",
        "group": "homepage"
      },
      "resources_filter_position": {
        "type": "select",
        "options": [
          "sidebar",
          "top",
          "hidden"
        ],
        "default": "sidebar",
        "group": "homepage"
      },
      "resources_feed_layout": {
        "type": "select",
        "options": [
          "list",
          "grid"
        ],
        "default": "grid",
        "group": "homepage"
      },
      "resources_card_image": {
        "type": "select",
        "options": [
          "small",
          "medium",
          "large",
          "wide 4/3",
          "wide 16/9",
          "hidden"
        ],
        "default": "small",
        "group": "homepage"
      },
      "image_lightbox": {
        "type": "boolean",
        "default": true,
        "group": "post"
      }
    }
  }
}
